<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <TextView
    android:id="@+id/fun_number_output"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/fun_number_margin_top"
    android:fontFamily="@font/roboto_bold"
    android:gravity="center"
    android:textColor="@color/colorPrimary"
    android:textSize="@dimen/fun_number_text_size"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="999" />

  <TextView
    android:id="@+id/fun_fact_output"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:autoLink="web"
    android:fontFamily="@font/roboto_regular"
    android:padding="@dimen/fun_fact_output_padding"
    android:textColor="@color/colorAccent"
    android:textSize="@dimen/fun_fact_output_text_size"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/fun_number_output"
    tools:text="BLah blah blah blah blah" />

  <TextView
    android:id="@+id/credit"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="8dp"
    android:autoLink="web"
    android:text="@string/api_credit"
    android:textColor="@color/colorAccent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent" />

  <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
    android:id="@+id/refresh_fab_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end|bottom"
    android:layout_margin="32dp"
    android:backgroundTint="@color/colorPrimary"
    android:contentDescription="@string/refresh_fab_title"
    android:text="@string/refresh_fab_title"
    android:textColor="@android:color/white"
    app:icon="@drawable/ic_baseline_refresh_24"
    app:iconTint="@null"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>